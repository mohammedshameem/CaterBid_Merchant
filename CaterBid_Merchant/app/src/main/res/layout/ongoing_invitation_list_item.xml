<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_green_background"
        android:orientation="vertical" >

        <!-- Pending Payment Heading -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/track_your_fix_heading_height"
            android:layout_marginLeft="@dimen/margin_nxormal"
            android:layout_marginRight="@dimen/margin_nxormal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="#49A582"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invitation"
                android:textColor="@color/white"
                android:textSize="20sp" />

            
        </LinearLayout>

        <!-- Content -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10" >

            <!-- Horizontal Image -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.7"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/track_your_fix_width"
                    android:layout_height="@dimen/track_your_fix_height"
                    android:padding="@dimen/small_padding"
                    android:visibility="invisible"
                    android:src="@drawable/green_dot"/>

                <LinearLayout
                    android:id="@+id/pending_invitation_image"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/grey_stroke_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:src="@drawable/plumbing_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:text="Plumbing"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Horizontal Content -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:weightSum="10" >

                <!-- Vertical Content -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pending_invitation_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/5/2015"
                        android:textColor="@color/black"
                        android:textSize="@dimen/track_your_fix_medium_text_size"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/booking"
                        android:textColor="#49A582"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/pending_invitation_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 12:00 to 15:00"
                        android:textColor="#49A582"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:layout_weight="3"
                    android:orientation="horizontal" >
					<ImageView 
					   android:layout_width="15dp"
                    	android:layout_height="15dp"
                    	android:src="@drawable/location" />
                    <TextView
                        android:id="@+id/ongoing_fix_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/margin_xsmaller"
                        android:text="Blk 38, Canberra road #1597, Singapore 789654"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Horizontal Arrow -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/minimize_icon"
                    android:layout_width="@dimen/track_your_fix_medium_width"
                    android:layout_height="@dimen/track_your_fix_medium_height"
                    android:src="@drawable/minimize_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/maximize_icon"
                    android:layout_width="@dimen/track_your_fix_medium_width"
                    android:layout_height="@dimen/track_your_fix_medium_height"
                    android:src="@drawable/maximize_icon" />
            </LinearLayout>
        </LinearLayout>

        
        <LinearLayout 
		    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp">
		    <TextView
                        android:id="@+id/textViewFixDescriptionOngoing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Fix descripton : ahsahd adjaduwetw owewwhf wyeuwyehwfj wey"
                        android:textSize="14sp" />
		</LinearLayout>
        
        <!-- Invitation Accept/Reject Layout -->

        <LinearLayout
            android:id="@+id/invitation_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#EAEAEA"
            android:orientation="vertical"
            android:weightSum="10" 
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:weightSum="10" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="2dp">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/profile_ring" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="3dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Baohuynh has invited you to join Fix #239495"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" 
                android:layout_marginBottom="10dp"
                android:gravity="center">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                <Button
                    android:layout_width="148dp"
                    android:layout_height="35dp"
                    android:background="@drawable/grey_button_rounded_corner"
                    android:text="Reject Invitation"
                    android:textColor="@color/white"
                    android:textSize="14sp" 
                    android:layout_marginRight="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                
                
                <Button
                    android:layout_width="148dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:text="Accept Invitation"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/green_button_rounded_corners"
                     />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_height"
            android:background="@color/light_greys"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>

</LinearLayout>