<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_green_background"
        android:orientation="vertical" >

        <!-- Pending Payment Heading -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/margin_nxormal"
            android:layout_marginRight="@dimen/margin_nxormal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/greenish_yellow"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pending_payment"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/pending_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" $234"
                android:textColor="@color/white"
                android:textSize="21sp" />
        </LinearLayout>

        <!-- Content -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10" >

            <!-- Horizontal Image -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="3.5"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/track_your_fix_width"
                    android:layout_height="@dimen/track_your_fix_height"
                    android:padding="@dimen/small_padding"
                    android:src="@drawable/green_dot"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/pending_image"
                    android:layout_width="fill_parent"
                    android:layout_height="85dp"
                    android:background="@drawable/grey_stroke_layout"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="10" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:src="@drawable/plumbing_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:text="Plumbing"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Horizontal Content -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="10" >

                <!-- Vertical Content -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="vertical"
                    android:layout_marginTop="3dp" >

                    <TextView
                        android:id="@+id/pending_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/5/2015"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/booking"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginLeft="3dp" />

                    <TextView
                        android:id="@+id/pending_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 12:00 to 15:00"
                        android:textColor="@color/black" 
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                     <ImageView 
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/location"/>
                    
                    <TextView
                        android:id="@+id/pending_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipising  "
                        android:textSize="13sp"
                        android:textColor="@color/dark_grey_for_text" />
                </LinearLayout>
            </LinearLayout>

            <!-- Horizontal Arrow -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/pending_right_arrow"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/green_right_arrow" />
            </LinearLayout>
        </LinearLayout>
         <!--Fix Descriptions  -->
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:layout_weight="2.5"
            android:gravity="left|center"
            android:orientation="horizontal" >
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fix description:"
                    android:textSize="16sp"
                    android:textColor="@color/dark_grey_for_text"/>
                
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="0dp"
                 android:text="                            Lorem ipsum dolor sit amet, consectetur adipising elit,sed do ei"
             	 android:textSize="16sp"
             	 android:textColor="@color/dark_grey_for_text"/>
            </RelativeLayout>
             </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_height"
            android:background="@color/light_greys"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>