<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
 

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:gravity="top|center"
        android:orientation="vertical"
        android:weightSum="12" >

        <LinearLayout
            android:id="@+id/app_iconLayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2.7"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/landing_page_icon"
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:src="@drawable/logo_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/congratulations_text"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="21sp" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight=".75"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
               
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                android:text="@string/select_category_text"
                android:textColor="@color/black"/>
        </LinearLayout>
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="4.5"
            android:gravity="center|bottom"
            android:orientation="vertical"
            android:weightSum="10"
           >
            
           

                <LinearLayout
                    android:id="@+id/select_fix_category_icons_layout_1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="4.5"
                    android:orientation="horizontal"
                    android:weightSum="8" >

                    <LinearLayout
                        android:id="@+id/select_fix_category_ac_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:background="@drawable/select_fix_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/select_fix_category_ac_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ac_icon" />

                        <TextView
                            android:id="@+id/select_fix_category_ac_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/select_fix_category_ac"
                            android:layout_marginTop="11dp"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
              <LinearLayout
                        android:id="@+id/select_fix_category_plumbing_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:background="@drawable/select_fix_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/select_fix_category_plumbing_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/plumbing_icon" />

                        <TextView
                            android:id="@+id/select_fix_category_plumbing_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/select_fix_category_plumbing"
                            android:textColor="@color/black"
                            android:layout_marginTop="15dp"
                            android:textSize="12sp" />
                    </LinearLayout>
            
              <LinearLayout
                        android:id="@+id/select_fix_category_electrician_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:background="@drawable/select_fix_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/select_fix_category_electrician_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/wiring_icon" />

                        <TextView
                            android:id="@+id/select_fix_category_electrician_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:text="@string/select_fix_category_electrician"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                     <LinearLayout
                        android:id="@+id/select_fix_category_painting_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:background="@drawable/select_fix_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/select_fix_category_painting_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/painting_icon" />

                        <TextView
                            android:id="@+id/select_fix_category_painting_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/select_fix_category_painting"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp" />
                    </LinearLayout>
                    </LinearLayout>
            
              <LinearLayout
                    android:id="@+id/select_fix_category_icons_layout_2"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="4.5"
                    android:orientation="horizontal"
                    android:weightSum="8" >

                    <LinearLayout
                        android:id="@+id/select_fix_category_carpenter_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:background="@drawable/select_fix_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/select_fix_category_carpenter_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/carpenter_icon" />

                        <TextView
                            android:id="@+id/select_fix_category_carpenter_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/select_fix_category_carpenter"
                            android:textColor="@color/black"
                            android:layout_marginTop="12dp"
                            android:textSize="12sp" />
                    </LinearLayout>
                      <LinearLayout
                        android:id="@+id/select_fix_category_locksmith_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:background="@drawable/select_fix_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/select_fix_category_locksmith_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/locksmith_icon" />

                        <TextView
                            android:id="@+id/select_fix_category_locksmith_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/select_fix_category_locksmith"
                            android:textColor="@color/black"
                            android:layout_marginTop="15dp"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/select_fix_category_pestCtrl_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:background="@drawable/select_fix_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/select_fix_category_pestCtrl_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/pest_control_icon" />

                        <TextView
                            android:id="@+id/select_fix_category_pestCtrl_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/select_fix_category_pest_ctrl"
                            android:textColor="@color/black"
                            android:layout_marginTop="15dp"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/select_fix_category_sanitization_layout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:background="@drawable/select_fix_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/select_fix_category_sanitization_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/sanitization_icon" />

                        <TextView
                            android:id="@+id/select_fix_category_sanitization_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/select_fix_category_sanitization"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
              </LinearLayout>
               <LinearLayout
                android:id="@+id/general_works_button"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1.25"
                android:background="@drawable/select_fix_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/general_works_button_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/general_works_icon" />

                <TextView
                    android:id="@+id/general_works_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="General Works"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="19sp" />
            </LinearLayout>
              

 <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1.25"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/login_submit_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/submit_text"
                android:textSize="20dp"
                 android:background="@drawable/green_button_rounded_corners"
                android:textColor="@color/white"/>
            
        </LinearLayout>
   </LinearLayout>
   </LinearLayout>