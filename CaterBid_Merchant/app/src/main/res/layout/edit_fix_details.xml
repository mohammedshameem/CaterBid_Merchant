<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#EAEAEA"
    android:orientation="vertical" >

    <include layout="@layout/custom_action_bar" />
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
   	android:layout_marginRight="10dp"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#EAEAEA"
        android:orientation="vertical"
        android:weightSum="22" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.5"
            android:background="@color/dark_green"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_fix_address"
                style="@style/CustomTextStyle_white_without_bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/address_text"
                android:gravity="center"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2.75"
            android:gravity="left|center"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:text="@string/postal_code"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/postal_code_edittext"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@drawable/editext_grey_stroke"
                android:gravity="center"
                android:hint="@string/postal_code_hint"
                android:textSize="15sp"
                android:inputType="number"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2.75"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.25"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" 
                    android:text="@string/floor_num_text"/>

                <EditText
                    android:id="@+id/floor_number_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/editext_grey_stroke"
                    android:gravity="center"
                    android:textSize="15sp" 
                    android:hint="@string/floor_num_text_hint"
                    android:inputType="number"
                  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.25"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/unit_num_text"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/unit_number_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/editext_grey_stroke"
                    android:gravity="center"
                    android:textSize="15sp" 
                    android:inputType="number"
                    android:hint="@string/unit_num_text_hint"
                   />
            </LinearLayout>
        </LinearLayout>
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >
      <View 
            android:layout_width="fill_parent"
            android:layout_height=".5dp"
            android:background="@color/view_grey_color"
            
    />
         </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

          <EditText
                android:id="@+id/date_time_selector"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/dark_green"
                android:background="@drawable/selectdateandtime"
                android:editable="false" 
                android:focusable="true"
                android:hint="Please select date and time"
                android:focusableInTouchMode="true">
             </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
      <View 
            android:layout_width="fill_parent"
            android:layout_height=".5dp"
            android:background="@color/view_grey_color"
            
    />
         
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.5"
            android:background="@color/dark_green"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/CustomTextStyle_white_without_bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tell us more about your Fix"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.75"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                style="@style/CustomTextStyle_black"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="@string/are_u_looking_for"
                android:textColor="@color/textcolor_light"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/fix_looking_for"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/spinner_drawable"
                android:entries="@array/dummy"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:gravity="top" >

            <EditText
                android:id="@+id/details_edittext"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:textSize="15sp"
                android:background="@drawable/editext_grey_stroke"
                android:hint="@string/details_hint"
                android:inputType="textMultiLine" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="5"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:orientation="horizontal"
            android:gravity="center" >
			 <LinearLayout 
                android:layout_width="0dp"
            	android:layout_height="match_parent"
            	android:layout_weight=".5"
            	android:gravity="center|left">
                <ImageView 
                    android:id="@+id/image_plus"
                    android:layout_width="25dp"
            		android:layout_height="25dp"
            		android:src="@drawable/minus"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
            	android:layout_height="match_parent"
            	android:layout_weight="3"
            	android:layout_marginRight="@dimen/margin_small"
            	android:gravity="center">
                <EditText
                android:id="@+id/description_edittext"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:textSize="15sp"
                android:background="@drawable/editext_grey_stroke"
                android:hint="@string/description_hint"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
            	android:layout_height="match_parent"
            	android:layout_weight="1.5"
            	android:gravity="center">
                <EditText
                android:id="@+id/price_edittext"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:textSize="15sp"
                android:background="@drawable/editext_grey_stroke"
                android:hint="@string/price_hint"/>
            </LinearLayout>
        </LinearLayout>
		
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="5"
                        	android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center" >
			 <LinearLayout 
                android:layout_width="0dp"
            	android:layout_height="match_parent"
            	android:layout_weight=".5"
            	android:gravity="center|left">
                <ImageView 
                    android:id="@+id/image_minus"
                    android:layout_width="25dp"
            		android:layout_height="25dp"
            		android:src="@drawable/plus"/>
            </LinearLayout>

            <LinearLayout 
                android:layout_width="0dp"
            	android:layout_height="match_parent"
            	android:layout_weight="4.5"
            	android:gravity="center">
                <EditText
                android:id="@+id/misc_charge_edittext"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/dark_green_contact_us"
                android:text="@string/miscellaneous"
                android:background="@drawable/edittext_green_stroke"
                android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/edit_button"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="@drawable/green_button_rounded_corners"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/CustomTextStyle_white_without_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_text"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
