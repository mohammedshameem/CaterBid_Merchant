<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@drawable/list_item_green_background" >

        <!-- Paid Heading -->

        <LinearLayout
            android:id="@+id/linear_banner_list"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/margin_nxormal"
            android:layout_marginRight="@dimen/margin_nxormal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_weight="2.5"
            android:background="@color/light_green"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/texteViewPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paid"
                android:textColor="@color/white"
                android:textSize="21sp"
                />

            <TextView
                android:id="@+id/paid_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_xsmaller"
                android:textColor="@color/white"
                android:textSize="21sp" />
        </LinearLayout>

        <!-- Content -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10" >

            <!-- Horizontal Image -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/completedgreendot"
                    android:layout_width="@dimen/track_your_fix_width"
                    android:layout_height="@dimen/track_your_fix_width"
                    android:padding="@dimen/small_padding"
                    android:visibility="visible"
                    android:src="@drawable/green_dot" />

                <LinearLayout
                    android:id="@+id/paid_image"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="vertical" 
                    android:gravity="center"
                    android:weightSum="10"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:id="@+id/imageViewTypeImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/grey_stroke_layout"
                         android:scaleType="fitXY"
                         />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plumbing"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:layout_weight="5"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Horizontal Content -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_weight="1.9"
                android:orientation="vertical"
                android:weightSum="10" >

                <!-- Vertical Content -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/5/2015"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="3dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp" >

                    <TextView
                        android:id="@+id/bookingcompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/booking"
                        android:textColor="#49A582"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 12:00 to 15:00"
                        android:textColor="#49A582"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:layout_weight="3"
                    android:orientation="horizontal" >
                    <ImageView 
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/location"/>

                    <TextView
                        android:id="@+id/paid_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipising elit,sed do ei "
                        android:textColor="@color/black"
                        android:textSize="13sp" 
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Horizontal Arrow -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/green_right_arrow" />
            </LinearLayout>
        </LinearLayout>
        
        <!--Fix Descriptions  -->
        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_weight="2.5"
            android:gravity="left|center"
            android:orientation="horizontal" >
                
             <TextView 
                 android:id="@+id/textview_campm_cancel_desc"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="0dp"
                 android:text="Descrptio: Lorem ipsum dolor sit amet, consectetur adipising elit,sed do ei"
             	 android:textSize="16sp"
             	 android:textColor="@color/black"/>
             </LinearLayout>
        

        <!-- Rating -->

        <LinearLayout
            android:id="@+id/layout_rating_linnear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_half_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_weight="2.5"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/first_star"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/star_none" />

            <ImageView
                android:id="@+id/second_star"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_xsmall"
                android:src="@drawable/star_none" />

            <ImageView
                android:id="@+id/third_star"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_xsmall"
                android:src="@drawable/star_none" />

            <ImageView
                android:id="@+id/fourth_star"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_xsmall"
                android:src="@drawable/star_none" />

            <ImageView
                android:id="@+id/fifth_star"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_xsmall"
                android:src="@drawable/star_none" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/AddReview_button"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_stroke_with_round_edge"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/request_review_icn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Request Review"
                android:textColor="@color/black"
                android:textSize="19sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_height"
            android:background="@color/light_greys" 
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

</LinearLayout>