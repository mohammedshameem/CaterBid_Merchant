<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
          >

      <TextView 
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:text="Users"
          android:textColor="@color/black"
            android:layout_marginLeft="10dp"
          android:gravity="center_vertical"
          android:textSize="20dp"
          />
          </LinearLayout>
    <LinearLayout 
           android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="7.7">
          <ListView 
              android:id="@+id/listview_user"              
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:divider="@null"
              
              >
          </ListView>
    </LinearLayout>

    <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/dark_green"
          >
          <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="right"           
            android:layout_weight="1"
            
            >
            <ImageView 
            android:id="@+id/imageview_user_adapter_image"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:src="@drawable/avtar_big"
                />
          </LinearLayout>
           <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            >
            <TextView 
             android:id="@+id/textview_user_adapter_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_the_knowledge"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            android:textSize="18dp"
                />
              <TextView 
            android:id="@+id/textview_user_adapter_customer"  
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/review_your_fixer"
            android:textColor="@color/white"
            android:textSize="18dp"
                />
        </LinearLayout>
          
 </LinearLayout>
      
      </LinearLayout>
    
       </LinearLayout>
