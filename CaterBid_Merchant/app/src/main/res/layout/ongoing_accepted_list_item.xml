<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_green_background"
        android:orientation="vertical" >

        <!-- Pending Payment Heading -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/track_your_fix_heading_height"
            android:layout_marginLeft="@dimen/margin_nxormal"
            android:layout_marginRight="@dimen/margin_nxormal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@color/light_green"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accepted:"
                android:textColor="@color/white"
                android:textSize="@dimen/track_your_fix_medium_text_size" />

            <TextView
                android:id="@+id/accepted_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" $234"
                android:textColor="@color/white"
                android:textSize="@dimen/track_your_fix_medium_text_size" />
        </LinearLayout>

        <!-- Content -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginBottom="10dp" >

            <!-- Horizontal Image -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_weight="3.7"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/track_your_fix_width"
                    android:layout_height="@dimen/track_your_fix_height"
                    android:padding="@dimen/small_padding"
                    android:src="@drawable/green_dot"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/accepted_image"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical" 
                    android:gravity="center"
                    android:weightSum="10"
                    android:background="@drawable/grey_stroke_layout"
                    >

                    <ImageView
                        
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/plumbing_icon"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:layout_marginTop="5dp" />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plumbing"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_weight="5"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Horizontal Content -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:weightSum="10" >

                <!-- Vertical Content -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/accepted_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/5/2015"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/booking"
                        android:textColor="#49A582"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/accepted_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 12:00 to 15:00"
                        android:textColor="#49A582"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <ImageView 
					   android:layout_width="15dp"
                    	android:layout_height="15dp"
                    	android:src="@drawable/location" />
                    
                    <TextView
                        android:id="@+id/accepted_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur  "
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Horizontal Arrow -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/accepted_right_arrow"
                    android:layout_width="@dimen/track_your_fix_medium_width"
                    android:layout_height="@dimen/track_your_fix_medium_height"
                    android:src="@drawable/green_right_arrow" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
		    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_nxormal"
            android:layout_marginBottom="@dimen/margin_small">
		    <TextView
                        android:id="@+id/textViewFixDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fix descripton : ahsahd adjaduwetw owewwhf wyeuwyehwfj wey"
                        android:textSize="16sp" />
		</LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_height"
            android:background="@color/light_greys"
            android:layout_marginLeft="@dimen/margin_nxormal"
            android:layout_marginRight="@dimen/margin_nxormal" />
    </LinearLayout>

</LinearLayout>