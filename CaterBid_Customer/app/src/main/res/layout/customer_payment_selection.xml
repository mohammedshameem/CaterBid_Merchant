<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/custom_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4" 
            android:layout_marginTop="2dp"
             android:gravity="center">
            <ImageView
                android:id="@+id/customer_payment_selection_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
               
                android:src="@drawable/landing_page_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="28dp"
            android:layout_weight="1.5"
             android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2"
             android:layout_marginTop="-5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:text="@string/how_do_wish_to_make"
                android:textColor="#3E3E3E"
                android:gravity="bottom"
                android:textSize="21sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:text="@string/payment_to_your_fixer"
                android:textColor="#3E3E3E"
                android:textSize="21sp" />
        </LinearLayout>
        
      

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1" 
            android:gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="-10dp
            ">

            <Button
                android:id="@+id/button_payment_cash"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/green_button_rounded_corners"
                android:text="@string/cash"
                android:gravity="center"
                android:textColor="@color/white"
            
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
          android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10" 
            android:layout_marginTop="-10dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="4.25"
                android:background="@color/view_grey_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="4.25"
                android:background="@color/view_grey_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8"
            android:layout_marginBottom="10dp" 
			android:layout_marginTop="-10dp" >

            <Button
                android:id="@+id/button_payment_creditcard_or_paypal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/blue_button_rounder_corners"
                android:text="@string/creditcard_or_paypal"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
          <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="2"
            
            >   
        </LinearLayout>
    </LinearLayout>

</LinearLayout>